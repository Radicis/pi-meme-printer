{
  "parser": "@typescript-eslint/parser",
  "env": {
    "browser": false,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018
  },
  "rules": {
    "@typescript-eslint/ban-ts-comment": "off",
    "linebreak-style": [
      "error",
      "unix"
    ]
  }
}
